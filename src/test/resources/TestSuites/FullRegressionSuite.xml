<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Regression Suite" verbose="1">
    <parameter name="browser" value="chrome"/>

    <test name="Positive Login Test in Chrome">
        <parameter name="browser" value="safari"/>
        <parameter name="username" value="student"/>
        <parameter name="password" value="Password123"/>
        <classes>
            <class name="com.exampletestautomation.test.login.LoginTests">
                <methods>
                    <include name="testLoginFunctionality"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Positive Login Test in Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="username" value="student"/>
        <parameter name="password" value="Password123"/>
        <classes>
            <class name="com.exampletestautomation.test.login.LoginTests">
                <methods>
                    <include name="testLoginFunctionality"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Incorrect Login Test">
        <parameter name="expectedErrorMessage" value="Your username is invalid!"/>
        <classes>
            <class name="com.exampletestautomation.test.login.LoginTests">
                <methods>
                    <include name="negativeLoginTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>